var
ch:string;
s,i:integer;

begin
read(ch);
writeln(' the lengtth of the sentence  is ',length(ch));
s:=1;
for i:=1 to length (ch) do
if  ch[i]=' '  then s:=s+1;

writeln('the number of words in the sentence is ',s);

s:=0;
for i:=1 to length(ch) do
if ch[i] in ['a','e','i','o','u','y'] then s:=s+1;
writeln('the number of vowels in the sentence is ',s);

